<Page x:Class="proje.giris"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:proje"
      mc:Ignorable="d" 
      d:DesignHeight="325" d:DesignWidth="325"
      Title="giris">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Kullanıcı Adı:" HorizontalAlignment="Center" Margin="20,20,0,20" VerticalAlignment="Center"/>
                <TextBox Name="s1" HorizontalAlignment="Center" Margin="10,20,20,20" Text="admin" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Şifre:            " HorizontalAlignment="Left" Margin="20,20,0,20" VerticalAlignment="Top"/>
                <PasswordBox Name="s2" HorizontalAlignment="Center" Margin="10,20,20,20" Password="admin"  VerticalAlignment="Center" Width="120"/>
            </StackPanel>
            <Button Content="Giriş Yap" Width="100" Height="30" Click="Button_Click" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        </StackPanel>
    </Grid>
</Page>
